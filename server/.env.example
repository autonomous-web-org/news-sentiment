# Exchanges to process
EXCHANGES=nse,nasdaq,nyse,sse,tyo,hkex,tsx,tadawul,xpar

# PythonAnywhere MySQL (inside PA; no SSH)
PA_DB_HOST=youruser.mysql.pythonanywhere-services.com
PA_DB_USER=youruser
PA_DB_PASSWORD=your_db_password
PA_DB_NAME=youruser$yourdbname

# Gemini API
GEMINI_API_KEY=your_gemini_key
GEMINI_MODEL=gemini-2.5-flash
ENABLE_GOOGLE_SEARCH=false

# Safety cap per run
MAX_DAYS_PER_TICKER=3

# --- Optional tuning ---
#LOG_LEVEL=INFO
#TZ=UTC
